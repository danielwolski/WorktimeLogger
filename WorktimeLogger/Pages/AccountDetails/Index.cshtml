@page
@model WorktimeLogger.Pages.AccountDetails.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1>Account details</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

            <tr>
                <td>@Model.UserDetails.UserName</td>
                <td>@Model.UserDetails.Email</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.UserDetails.Id">Change password</a>
                </td>
            </tr>
    </tbody>
</table>
